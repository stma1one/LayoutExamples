<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LayoutExamples.FlexLayoutExamplePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="FlexLayout Example Page">
    <FlexLayout
        Margin="10"
        Direction="Row"
        Wrap="NoWrap">
        <Button
            x:Name="flexPage"
            BackgroundColor="Red"
            Clicked="NavigateOnClick"
            FlexLayout.Basis="25%"
            FontSize="10"
            HeightRequest="50"
            Text="מבנה דף גמיש" />
        <Button
            x:Name="WrapPage"
            BackgroundColor="Green"
            Clicked="NavigateOnClick"
            FlexLayout.Basis="25%"
            FontSize="10"
            HeightRequest="50"
            Text="מעטפת" />
        <Button
            x:Name="galleryPage"
            BackgroundColor="Blue"
            Clicked="NavigateOnClick"
            FlexLayout.Basis="25%"
            FlexLayout.Shrink="1"
            FontSize="10"
            HeightRequest="50"
            Text="גלריה" />
        <BoxView
            CornerRadius="7"
            FlexLayout.Basis="25%"
            HeightRequest="50"
            Color="Yellow" />
    </FlexLayout>

</ContentPage>